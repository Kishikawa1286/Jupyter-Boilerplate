{
	"name": "Ubuntu",
	"image": "ubuntu:jammy",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/eitsupi/devcontainer-features/julia:0": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/rocker-org/devcontainer-features/r-apt:0": {}
	},
	"postCreateCommand": "pip install openai python-dotenv regex",
	"service": "texlive-ja",
	"workspaceFolder": "/workspaces/papers-2023",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"marp-team.marp-vscode",
				"tomoki1207.pdf",
				"REditorSupport.r"
			],
			"settings": {
				"terminal.integrated.shell": "/bin/bash",
				"editor.codeActionsOnSave": {
					"source.organizeImports.python": true
				},
				"python.analysis.typeCheckingMode": "basic",
				"python.formatting.provider": "autopep8",
				"python.formatting.autopep8Args": [
					"--max-line-length",
					"80"
				],
				"[python]": {
					"editor.formatOnSave": true,
					"editor.formatOnPaste": true
				}
			}
		}
	}
}
